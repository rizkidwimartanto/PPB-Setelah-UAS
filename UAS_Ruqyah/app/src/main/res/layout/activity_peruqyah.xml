<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".halaman_utama.PeruqyahActivity"
    android:background="#ABF89B"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Pilih Peruqyah"
        android:layout_marginBottom="5mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="55mm">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            android:layout_marginRight="1mm"
            android:layout_gravity="center"
            android:id="@+id/card_perdanaahmad"
            android:layout_width="30mm"
            android:layout_height="50mm">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/zunaidi"
                    android:id="@+id/gambar_perdanaahmad"
                    android:layout_width="30mm"
                    android:layout_height="25mm"/>

                <TextView
                    android:textColor="#000000"
                    android:background="#FAEF90"
                    android:id="@+id/tv_profilperdanaahmad"
                    android:layout_width="match_parent"
                    android:layout_height="15mm"
                    android:lineHeight="5mm"
                    android:text="@string/profilperdanaahmad"
                    android:textSize="17dp" />
                <LinearLayout
                    android:background="#FAEF90"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:background="#68EFE4"
                        android:onClick="click_pilih1"
                        android:id="@+id/btn_pilih1"
                        android:text="Pilih"
                        android:layout_width="13mm"
                        android:layout_height="match_parent"
                        tools:ignore="OnClick" />
                    <Button
                        android:id="@+id/btn_lokasi1"
                        android:background="#F49C63"
                        android:text="Lokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            android:layout_marginLeft="1mm"
            android:layout_gravity="center"
            android:id="@+id/card_muhammadzunaidi"
            android:layout_width="30mm"
            android:layout_height="50mm">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ahmad"
                    android:id="@+id/gambar_muhammadzunaidi"
                    android:layout_width="30mm"
                    android:layout_height="25mm"/>

                <TextView
                    android:textColor="#000000"
                    android:background="#FAEF90"
                    android:id="@+id/tv_profilmuhammadzunaidi"
                    android:layout_width="match_parent"
                    android:layout_height="15mm"
                    android:lineHeight="5mm"
                    android:text="@string/profilmuhammadzunaidi"
                    android:textSize="17dp" />
                <LinearLayout
                    android:background="#FAEF90"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:background="#68EFE4"
                        android:onClick="click_pilih2"
                        android:id="@+id/btn_pilih2"
                        android:text="Pilih"
                        android:layout_width="13mm"
                        android:layout_height="match_parent"
                        tools:ignore="OnClick" />
                    <Button
                        android:background="#F49C63"
                        android:id="@+id/btn_lokasi2"
                        android:text="Lokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>