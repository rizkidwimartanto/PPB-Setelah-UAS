<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundloginregistrasi2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_login"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="15mm"

        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:padding="4mm"
        android:layout_marginTop="5mm"
        android:layout_marginLeft="5mm"
        android:layout_marginRight="5mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="#ffffff"
            android:layout_marginBottom="2mm"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/akun"
                android:layout_width="5mm"
                android:layout_height="8mm"/>
            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyz"
                android:inputType="text"
                android:padding="1mm"
                android:layout_margin="1mm"
                android:background="#D6D2D2"
                android:id="@+id/et_username"
                android:hint="Username"
                android:textSize="15dp"
                android:textColor="#040303"
                android:layout_marginBottom="5mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/password"
                android:layout_width="5mm"
                android:layout_height="8mm"/>
            <EditText
                android:padding="1mm"
                android:layout_margin="1mm"
                android:background="#D6D2D2"
                android:inputType="textPassword"
                android:id="@+id/et_password"
                android:hint="Password"
                android:textSize="15dp"
                android:textColor="#0E0E0E"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7mm"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:onClick="click_login"
                android:id="@+id/btn_login"
                android:text="Login"
                android:layout_marginBottom="2mm"
                android:textSize="15dp"
                android:background="@drawable/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:onClick="click_regitrasi"
                android:text="Registrasi"
                android:background="@drawable/btn_registrasi"
                android:textSize="15dp"
                android:id="@+id/btn_registrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="4mm"
                android:text="sign in with"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="2mm"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/facebook"
                    android:id="@+id/btn_facebook"
                    android:layout_marginRight="6mm"
                    android:layout_width="8mm"
                    android:layout_height="8mm"/>
                <Button
                    android:background="@drawable/google"
                    android:id="@+id/btn_google"
                    android:layout_marginRight="0mm"
                    android:layout_width="8mm"
                    android:layout_height="8mm"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>